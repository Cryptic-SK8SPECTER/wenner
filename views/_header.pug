
header.pc-header
  .header-wrapper
    .me-auto.pc-mob-drp
      ul.list-unstyled
        li.pc-h-item.pc-sidebar-collapse
          a#sidebar-hide.pc-head-link.ms-0(href='#')
            i.ti.ti-menu-2
        li.pc-h-item.pc-sidebar-popup
          a#mobile-collapse.pc-head-link.ms-0(href='#')
            i.ti.ti-menu-2
        li.pc-h-item.pc-sidebar-popup
          a#mobile-collapse.ms-0(href='#')
            img.img-fluid(src='/images/logo-1-removebg-preview.png', width='50px', alt='logo')       
    .ms-auto
      ul.list-unstyled
        li.dropdown.pc-h-item
          a.pc-head-link.dropdown-toggle.arrow-none.me-0(data-bs-toggle='dropdown', href='#', role='button', aria-haspopup='false', aria-expanded='false')
            svg.pc-icon
              use(xlink:href='#custom-sun-1')
          .dropdown-menu.dropdown-menu-end.pc-h-dropdown
            a.dropdown-item(href='#!', onclick='layout_change("dark")')
              svg.pc-icon
                use(xlink:href='#custom-moon')
              span Dark
            a.dropdown-item(href='#!', onclick='layout_change("light")')
              svg.pc-icon
                use(xlink:href='#custom-sun-1')
              span Light
            a.dropdown-item(href='#!', onclick='layout_change_default()')
              svg.pc-icon
                use(xlink:href='#custom-setting-2')
              span Default
        if user        
          li.dropdown.pc-h-item
            a.pc-head-link.dropdown-toggle.arrow-none.me-0(data-bs-toggle='dropdown', href='#', role='button', aria-haspopup='false', aria-expanded='false')
              svg.pc-icon
                use(xlink:href='#custom-setting-2')
            .dropdown-menu.dropdown-menu-end.pc-h-dropdown
              a.dropdown-item(href='/me')
                i.ti.ti-user
                span Minha conta
              a.dropdown-item(href='/me')
                i.ti.ti-settings
                span Configura&ccedil;&otilde;es
              a.dropdown-item.nav__el--logout(href='/logout')
                i.ti.ti-power
                span Sair
          li.dropdown.pc-h-item
            a.pc-head-link.dropdown-toggle.arrow-none.me-0(data-bs-toggle='dropdown', href='#', role='button', aria-haspopup='false', aria-expanded='false')
              svg.pc-icon
                use(xlink:href='#custom-notification')
              span.badge.bg-success.pc-h-badge 3
            .dropdown-menu.dropdown-notification.dropdown-menu-end.pc-h-dropdown
              .dropdown-header.d-flex.align-items-center.justify-content-between
                h5.m-0 Notificações
                a.btn.btn-link.btn-sm(href='#!') Marcar tudo como lido
              .dropdown-body.text-wrap.header-notification-scroll.position-relative(style='max-height:calc(100vh - 215px)')
                .card.mb-2
                  .card-body
                    .d-flex
                      .flex-shrink-0
                        svg.pc-icon.text-dark
                          use(xlink:href='#custom-sms')
                      .flex-grow-1.ms-3
                        span.float-end.text-sm.text-muted 1 hour ago
                        h5.text-body.mb-2 Message
                        p.mb-0
                          | Lorem Ipsum has been the industry&apos;s standard dummy text
                          | ever since the 1500.
              
              .text-center.py-2
                a.link-danger(href='#!') Limpar todas as notificações
            
          li.dropdown.pc-h-item.header-user-profile
            a.pc-head-link.dropdown-toggle.arrow-none.me-0(data-bs-toggle='dropdown', href='#', role='button', aria-haspopup='false', data-bs-auto-close='outside', aria-expanded='false')
              img.user-avtar(src=`/img/users/${user.photo}` alt='user-image')
            .dropdown-menu.dropdown-user-profile.dropdown-menu-end.pc-h-dropdown
              .dropdown-header.d-flex.align-items-center.justify-content-between
                h5.m-0 Perfil
              .dropdown-body
                .profile-notification-scroll.position-relative(style='max-height:calc(100vh - 225px)')
                  .d-flex.mb-1
                    .flex-shrink-0
                      img.user-avtar.wid-35(src=`/img/users/${user.photo}` alt='user-image')
                    .flex-grow-1.ms-3
                      h6.mb-1 #{user.name}
                      span
                        a.__cf_email__(href='/cdn-cgi/l/email-protection', data-cfemail='e2818390918d8ccc868390908b8ca2818d8f92838c9bcc8b8d')  #{user.email}
                  hr.border-secondary.border-opacity-50
                  .card
                    .card-body.py-3
                      .d-flex.align-items-center.justify-content-between
                        h5.mb-0.d-inline-flex.align-items-center
                          svg.pc-icon.text-muted.me-2
                            use(xlink:href='#custom-notification-outline')
                          | Notificação
                        .form-check.form-switch.form-check-reverse.m-0
                          input.form-check-input.f-18(type='checkbox', role='switch')
                  p.text-span Gerenciar
                  a.dropdown-item(href='/me')
                    span
                      svg.pc-icon.text-muted.me-2
                        use(xlink:href='#custom-setting-outline')
                      span Configura&ccedil;&otilde;es
                  a.dropdown-item(href='/me')
                    span
                      svg.pc-icon.text-muted.me-2
                        use(xlink:href='#custom-lock-outline')
                      span Alterar a senha
                  hr.border-secondary.border-opacity-50
                  .d-grid.mb-3
                    button.btn.btn-dark.nav__el--logout
                      svg.pc-icon.me-2
                        use(xlink:href='#custom-logout-1-outline')
                      | Sair
        else 
          .d-flex.flex-wrap.gap-2 
            li.dropdown.pc-h-item
              a.btn.btn-light.text-muted(target='_blank', href='/login')
                | LOGIN
            li.dropdown.pc-h-item
              a.btn.btn-outline-secondary.btn-shadow(target='_blank', href='/signup')
                | SIGN UP